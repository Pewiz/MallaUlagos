---
const { linkAdmision, name } = Astro.props;
---

<div class="topBar">
  <div>
    <a href="https://www.ulagos.cl/" target="_blank"
      ><img
        src="https://res.cloudinary.com/doq82xcpd/image/upload/v1730396958/hcdm7gwagrz84vth9uem.svg"
        alt="Ulagos Logo"
      /></a
    >
  </div>
  <div class="title text-2xl"><h1>{name}</h1></div>
  <a class="text" href={linkAdmision} target="_blank"
    ><button class="btn-admision">Admisi√≥n</button></a
  >
</div>

<style>
  .topBar {
    background-color: #00275e;
    display: flex;
    color: white;
    justify-content: space-around;
    align-items: center;
    padding: 15px;
    min-height: 87px;
  }
  .title {
    text-transform: uppercase;
    text-align: center;
    font-weight: bold;
  }
  .btn-admision {
    padding: 10px 5px;
    background-color: #295494;
    outline: 3px #295494 solid;
    outline-offset: -3px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    transition: 400ms;
    width: 95px;
    min-height: auto;
  }

  .text .btn-admision {
    color: white;
    font-weight: 500;
    font-size: 14px;
    transition: 400ms;
  }

  .btn-admision:hover {
    background-color: #ff4c00;
    outline: 3px #ff4c00 solid;
  }

  .topBar a {
    color: white;
    font-size: 14px;
  }

  @media (max-width: 710px) {
    .topBar {
      flex-direction: column;
      gap: 30px;
    }
    .topBar a {
      color: white;
      font-size: 13px;
    }
    .btn-admision {
      padding: 9px 5px;
      width: 90px;
    }
  }
</style>
